{
    "version": "1.0.0",
    "examples": [
        {
            "name": "video_captioning",
            "title": "Video Captioning",
            "description": "Generate captions for an existing video",
            "main_script": "video_captioning/example.py",
            "input_files": [
                "assets/birds.mp4", 
                "video_captioning/example_transcript.txt"
            ],
            "output_files": [
                "assets/birds_subtitles.ass", 
                "assets/birds_output.mp4"
            ],
            "documentation": "video_captioning/README.md"
        },
        {
            "name": "text_to_speech",
            "title": "Text-to-Speech with Captions",
            "description": "Convert text to speech and add captions",
            "main_script": "text_to_speech/example_tts.py",
            "input_files": [
                "text_to_speech/test_text.txt"
            ],
            "output_files": [
                "assets/tts_example.mp4"
            ],
            "documentation": "text_to_speech/README.md"
        }
    ],
    "dependencies": [
        "openai-whisper>=20231117",
        "pysubs2>=1.6.0",
        "tqdm>=4.66.1",
        "gtts>=2.3.0"
    ],
    "system_requirements": [
        "ffmpeg"
    ]
}
